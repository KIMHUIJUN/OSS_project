<p id="notice"><%= notice %></p>

<h1>Tracks</h1>

<table>
  <thead>
    <tr>
	  <th>AlbumImage</th>
      <th>Title</th>
      <th>Recommend</th>
      <th>Flac</th>
      <th>Genre</th>
      <th>Album</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |track| %>
      <tr>
		<td><img src=<%= track.album.album_link%>, hight=100, width=100/>
        <td><%= link_to track.title, track %></td>
        <td><%= track.recommend %></td>
        <td><%= track.flac %></td>
        <td><%= track.genre %></td>
        <td><%= link_to track.album.title, album_path(track.album.id) %></td>
        <td><%= link_to 'Show', track %></td>
        <td><%= link_to 'Edit', edit_track_path(track) %></td>
        <td><%= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

